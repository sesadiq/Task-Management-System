@model IEnumerable<OfficeFinal.Models.UserTaskRelation>

@{
    ViewBag.Title = "Index";
}

 <div class="col-12 col-md-12 col-lg-12" >
        <div class="card">
            <div class="card-header">
                <h4>User Task</h4>
            </div>
            <div class="card-body">


                <p>
                    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success icon icon-add-to-list" })
                </p>
                <table class="table" id="table_id">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.AspNetUser.Email)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.UserTask.CreatorId)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.AspNetUser.Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UserTask.Message)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                </td>
                            </tr>
                        }
                    </tbody>
                   

                </table>



            </div>
        </div>


        

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }

    </div>



