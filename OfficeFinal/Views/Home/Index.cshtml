    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 col-12 ">
        <div class="card">
            <div class="card-header">
                <h4>Task you have assigned..</h4>
            </div>
            <div class="card-body">
                     <div class="table-responsive">
                    <p>
                        @Html.ActionLink("Create New Task", "Create", "UserTasks", null, new { @class = "btn btn-success icon icon-add-to-list" })
                    </p>
                    <table class="table table-striped table-md" id="table_id2">
                        <thead>
                            <tr>
                                <th>NO.</th>
                               
                                <th>
                                    @Html.DisplayNameFor(model => model.Message)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.CreateDate)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.DeadLine)
                                </th>
                                <th>Number of People Involved</th>
                                <th>
                                    @Html.DisplayName("Status")
                                </th>
                                <th>@Html.DisplayName("Uploaded File")</th>
                                
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in ViewBag.yourAssignedTask)
                            {
                            <tr>
                                <td>@(counter++)</td>

                                
                                <td>
                                    @*@item.Message*@
                                    @Html.Raw(item.Message.Substring(1, (item.Message.Length)/2))
                                </td>
                                <td>

                                    @item.CreateDate.ToString("dd MMMM yyyy")
                                </td>
                                <td>
                                    @item.DeadLine.ToString("dd MMMM yyyy")
                                </td>
                                <td>@item.UserTaskRelations.Count</td>
                                <td class="badge badge-pill badge-info mb-xl-4" style="position:center">
                                    @item.Status.Name
                                </td>

                                <td>
                                    @if (item.files != null && item.files != "-1")
                                    {

                                        var str = item.files;

                                        var fileName = str.Substring(24, str.Length - 24);

                                        <a class="title" style="color:green" href="~/Home/download?d=@fileName">@fileName</a>
                                    }
                                </td>
                                

                                <td>

                                    @*@Html.ActionLink("Details", "Details", new { id = item.TaskId })*@
        
                                   @Html.ActionLink("Details", "Details",  new { controller = "Home", id = item.TaskId },new { @class = "btn btn-success btn-sm" }) |
                                   @Html.ActionLink("Edit", "FullTaskEdit", new { id = item.TaskId }, new { @class= "btn btn-primary btn-sm"}) |
                                   @Html.ActionLink("Delete", "DeleteTask", new { id = item.TaskId }, new { @class= "btn btn-danger btn-sm"})

                                </td>

                            </tr>
                            }
                        </tbody>


                    </table>
                    </div>
                </div>
            </div>
    </div>





    <script>
        $(document).ready(function () {
            $('#table_id2').DataTable();
        });
    </script>
