@model IEnumerable<OfficeFinal.Models.UserTask>

@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var i = 1;
    int counter = 1;
}


<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 col-12 ">
    <div class="card">
        <div class="card-header">
            <h4>Tasks Assigned to you...</h4>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                 <table class="table table-striped table-md" id="table_id">
                <thead>
                    <tr>
                        <th>No.</th>
                        <th>
                            @Html.DisplayName("Assign By")
                        </th>

                        <th>
                            @Html.DisplayName("Task Description")
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CreateDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DeadLine)
                        </th>
                        <th>
                            @Html.DisplayName("Status")
                        </th>
                        <th>Uploade Files</th>
                        <th>

                        </th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@(i++)</td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AspNetUser.FullName)
                            </td>

                            <td>
                                @*@Html.DisplayFor(modelItem => item.Message)*@
                                @Html.Raw(item.Message)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CreateDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DeadLine)
                            </td>




                            <td class="badge badge-pill badge-info mb-xl-4" style="position:center">
                                @Html.DisplayFor(modelItem => item.Status.Name)
                            </td>
                            <td>
                                @if (item.files != null && item.files != "-1")
                                {

                                    var str = item.files;

                                    var fileName = str.Substring(24, str.Length - 24);

                                    <a class="title" style="color:green" href="~/Home/download?d=@fileName">@fileName</a>
                                }
                            </td>
                            <td>
                                <a href="@Url.Action("Create","UserComments" , new { id = item.TaskId },null)" class="btn btn-success btn-sm">
                                    <i class="icon glyphicon-alert"></i>
                                    <span>
                                       Comments
                                    </span>
                                </a>
                                @*@Html.ActionLink("Comment", "Create", "UserComments", new { id = item.TaskId }, null)*@
                            </td>
                        </tr>
                    }
                </tbody>



            </table>
            </div>
        </div>
    </div>
</div>

